# Heroes - Environment Variables Configuration
# Copy this file to .env and adjust values as needed

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_APP=backend/app.py

# Server Configuration
HOST=0.0.0.0
PORT=5000

# File Upload Configuration
MAX_FILE_SIZE_MB=100
UPLOAD_FOLDER=/tmp/heroes_uploads
ALLOWED_EXTENSIONS=csv,parquet,pq

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/heroes/app.log

# CORS Configuration
CORS_ORIGINS=*

# Analysis Configuration
MAX_SAMPLES_FOR_ANALYSIS=10000
ENABLE_ASYNC_JOBS=False

# Database (Optional - for future versions)
# DATABASE_URL=postgresql://user:password@localhost/heroes
# REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=change-this-to-a-random-secret-key

# Features Flags
ENABLE_EXPORT=True
ENABLE_ADVANCED_METRICS=True
ENABLE_VISUALIZATION=True
